<% page_header "Profiles" %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile.each do |profile| %>
      <tr>
        <td><%= link_to profile.user.alias, profile %></td>
        <% if current_user == profile.user %>
          <td>| <%= link_to 'Edit', edit_profile_path(profile) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
