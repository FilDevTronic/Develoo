<p id="notice"><%= notice %></p>

<h1>User Stories</h1>

<table>
  <thead>
    <tr>
      <th>As a</th>
      <th>Isbat</th>
      <th>So that</th>
      <th>Commission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_stories.each do |user_story| %>
      <tr>
        <td><%= user_story.as_a %></td>
        <td><%= user_story.isbat %></td>
        <td><%= user_story.so_that %></td>
        <td><%= user_story.commission %></td>
        <td><%= link_to 'Show', user_story %></td>
        <td><%= link_to 'Edit', edit_user_story_path(user_story) %></td>
        <td><%= link_to 'Destroy', user_story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

