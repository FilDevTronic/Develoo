<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :alias, 'Enter a display name',class: "col-sm-4 control-label" %>
    <p class="small col-sm-4 text-muted">
      This is the name every user and the public will see when they look at your profile.
    </p>
    <div class="col-sm-4">
      <%= f.text_field :alias %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Enter your first and last name', class: "col-sm-4 control-label" %>
    <p class="small col-sm-4 text-muted">
      Your real name will only be visible to Admins and during transactions.
    </p>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control",autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Enter your e-mail address', class: "col-sm-4 control-label" %>
    <p class="small col-sm-4 text-muted">
      This is the e-mail that will be associated with your account.
    </p>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Enter a password', class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <% if @minimum_password_length %>
        <p class="small text-muted">
          <em>
            (<%= @minimum_password_length %> characters minimum)
          </em>
      </p>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Please re-enter your password', class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
