<div class="text-white">
  <h2>Edit Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <h5>Edit my details</h5>

  <div class="form-group">
    <%= f.label :alias, "Display Name", class: 'col-sm-4 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :alias, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "Real Name", class: 'col-sm-4 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "E-mail Address", class: 'col-sm-4 control-label' %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :password, "New Password", class: 'col-sm-4 control-label' %>
    <p class="small col-sm-4 text-white">
      <i>(leave blank if you don't want to change it)</i>
    </p>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Re-Enter New Password", class: 'col-sm-4 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <% if current_user.has_any_role? :dev, :client %>
    <div class: "col-sm-4">
       <%= f.label :role_ids, "Change account type", class: "col-sm-4 control-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.collection_radio_buttons(:role_ids, Role.where.not(name: :admin), :id, :name ) do |button| %>
        <%= button.label(class: "btn btn-secondary") do %>
          <%= button.radio_button %>
          <%= button.text.capitalize %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <br>

  <div class="form-group">
    <%= f.label :current_password, class: 'col-sm-4 control-label' %>
    <p class="small col-sm-4 text-white">
      <i>Enter your current password to confirm any changes</i>
    </p>
    <div class="col-sm-6">
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Update Account", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
  <hr class="my-2">
  <h5>Cancel my account</h5>
  <div class="container">
    <p>Develoo not for you? No problem. Just click the link below and your account and all your commission listing will be deleted post haste.</p>
    <p class="text-danger">
    WARNING: There is no going back. Once your account is gone, it's gone.</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-xs' %></p>
  </div>

  <br>

  <div>
    <%= link_to "Go back", :back, class: "btn btn-primary" %>
  </div>

  <br>
</div>
