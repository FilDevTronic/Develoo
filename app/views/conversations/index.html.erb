<% page_header "Your Conversations" %>

  <nav class="nav nav-pills nav-justified">
      <%= mailbox_section 'inbox', @box, class: 'nav-item nav-link' %>
      <%= mailbox_section 'sent', @box, class: 'nav-item nav-link'  %>
      <%= mailbox_section 'trash', @box, class: 'nav-item nav-link'  %>
  </nav>

  <div class="col-sm-9 mx-auto my-4">
    <% if @box == 'trash' %>
      <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></p>
    <% end %>
    <ul class="list-group">
      <%= render partial: 'conversations/conversation', collection: @conversations %>
    </ul>

    <%= will_paginate %>
  </div>
</div>

<div class="container text-center my-4"><%= link_to 'Start conversation', new_message_path, class: 'btn btn-lg btn-primary' %></div>
