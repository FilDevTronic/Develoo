<li class="list-group-item flex-column align-items-start">
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1"><%= commission.title %></h5>
    <p class="text-right">Price:<span style="color: green"><%= number_to_currency order_item.total_price %></span></p>
    </div>
    <p class="mb-1"><%= commission.description %></p>
    <p class="small">To be developed by <%= link_to commission.user.alias, profile_path(commission.user) %></p>
    <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the commission '#{order_item.commission.title}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
</li>
