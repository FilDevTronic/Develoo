<% page_header "Commissions" %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commissions.each do |commission| %>
      <tr>
        <td><%= commission.user %></td>
        <td><%= commission.title %></td>
        <td><%= commission.description %></td>
        <td><%= commission.price %></td>
        <td><%= link_to 'Show', commission %></td>
        <% if current_user == commission.user %>
          <td><%= link_to 'Edit', edit_commission_path(commission) %></td>
          <td><%= link_to 'Destroy', commission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commission', new_commission_path %>
